@model SPaPS.Models.AccountModels.ChangeInfoModel;

@{
    ViewData["Title"] = "Change Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Промени информации за корисникот</h2>
<br />

<form asp-action="ChangeInfo" method="post" class="row g-3">
    <div class="col-md-4">
        <div class="form-floating mb-3">
            <input asp-for="Name" type="text" class="form-control" placeholder="Name">
            <label asp-for="Name"></label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-floating mb-3">
            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="PhoneNumber">
            <label asp-for="PhoneNumber"></label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-floating mb-3">
            <input asp-for="IdNo" type="text" class="form-control" placeholder="IdNo">
            <label asp-for="IdNo"></label>
        </div>
    </div>
    <div class="col-12">
        <div class="form-floating mb-3">
            <input asp-for="Address" type="text" class="form-control" placeholder="Address">
            <label asp-for="Address"></label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-floating mb-3">
            <select asp-for="ClientTypeId" class="form-control" asp-items="ViewBag.ReferenceTypesClient">
                <option value="">Избери</option>
            </select>
            <label asp-for="ClientTypeId"></label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-floating mb-3">
            <select asp-for="CityId" class="form-control" asp-items="ViewBag.ReferenceTypesCity">
                <option value="">Избери</option>
            </select>
            <label asp-for="CityId"></label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-floating mb-3">
            <select asp-for="CountryId" class="form-control" asp-items="ViewBag.ReferenceTypesCountry">
                <option value="">Избери</option>
            </select>
            <label asp-for="CountryId"></label>
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Промени</button>
    </div>
</form>

<p class="col-12 text-center text-danger">@Html.ValidationMessage("Error")</p>
<h4 class="col-12 text-center text-success">@Html.ValidationMessage("Success")</h4>